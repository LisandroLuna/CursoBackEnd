html
    head
        title="Clase 11 - PUG"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous")
    body
        div(class="container")
            div(class="row p-5")
                div(class="col-lg-12")
                    div(class="col-lg-3")
                    div(class="col-lg-6")
                        h1(class="display-4")="Carga de productos"
                        form(action="/api/productos" method="post")
                            div(class="mb-3")
                                label(for="title" class="form-label")="Titulo"
                                input(type="text" class="form-control" id="title" name="title" placeholder="Ingresa un titulo...")
                            div(class="mb-3")
                                label(for="price" class="form-label")="Precio"
                                input(type="text" class="form-control" id="price" name="price" placeholder="Ingresa un Precio...")
                            div(class="mb-3")
                                label(for="thumb" class="form-label")="Imagen"
                                input(type="text" class="form-control" id="thumb" name="thumbnail" placeholder="Ingresa url de la imagen...")
                            button(type="submit" class="btn btn-success")="Enviar"

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous")